    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2",
    "vitest": "^1.0.4"
  },
  "dependencies": {
    "chevrotain": "^11.0.3",
    "commander": "^11.1.0",
    "prettier": "^3.1.0"
